{
	"files.exclude": {
		"**/.DS_Store": true,
		"**/.git": false,
		"**/.github": false,
		"**/.gitp*": true,
		"**/.hg": true,
		"**/.svn": true,
		"**/.vscode": false,
		"**/core.Microsoft*": true,
		"**/core.mongo*": true,
		"**/core.python*": true,
		"**/CVS": true,
		"**/._*": true
	},
	"files.autoSave": "off",
	"workbench.colorTheme": "Ayu Mirage Bordered",
	"terminal.integrated.gpuAcceleration": "auto",
	"typescript.disableAutomaticTypeAcquisition": true,
	"editor.fontFamily": "SF Mono",
	"javascript.preferences.importModuleSpecifier": "relative",
	"javascript.preferences.importModuleSpecifierEnding": "js",
	"python-envs.pythonProjects": [
		{
			"path": "",
			"envManager": "ms-python.python:system",
			"packageManager": "ms-python.python:pip"
		}
	],
	// Disable default test runners
	"python.testing.pytestEnabled": false,
	"python.testing.unittestEnabled": true,
	// Configure custom test command for Django
	"python.testing.cwd": "${workspaceFolder}",
	"python.testing.unittestArgs": [
		// "-v",
		// "-s",
		// ".", // Start discovery from the project root
		// "-p",
		// "test*.py" // Pattern for test files
	],
	"python.envFile": "${workspaceFolder}/.env",
	"python.terminal.useEnvFile": true,
	"python.testing.autoTestDiscoverOnSaveEnabled": true,
	"python.testing.autoTestDiscoverOnSavePattern": "**/*.py"
}
